<% layout('/layouts/boilerplate') -%>

<div class="row">
    <div class="col-6 offset-3 mb-3">
        <img src="<%= campground.image %>" class="card-img-top img-thumbnail" alt="<%= campground.title %>">
    <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= campground.location %></li>
        <li class="list-group-item">$<%= campground.price %>/night</li>
    </ul>
    <div class="card-body">
        <a href="/campgrounds/<%= campground._id %>/edit" class="card-link btn btn-primary" >Edit</a>
        <form class="d-inline" method="POST" action="/campgrounds/<%= campground._id %>?_method=Delete">
            <button class="btn btn-danger">Delete</button>
        </form>
    </div>
    <footer class="card-footer text-body-tertiary">
        2 days ago
    </footer>
    <h3>Leave a Review</h3>
    <form method="post" action="/campground/<%= campground._id  %>/review" class="mb-3 needs-validation" novalidate>
        <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
        </div>
        <div class="mb-3">
            <label for="review" class="form-label">Review</label>
            <textarea class="form-control" name="review[body]" id="review" col=10 row="3" required></textarea>
            <div class="valid-feedback">
                Looks good !
            </div>
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
    </div>
</div>



